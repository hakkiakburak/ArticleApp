{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "screens/*": ["src/screens/*"],
      "navigation/*": ["src/navigation/*"],
      "data/*": ["src/data/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
